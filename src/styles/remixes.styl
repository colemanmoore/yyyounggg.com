#remixes
  width 100%

  #remix-grid
    margin 0 auto
    padding 2% 10%
    display flex
    flex-wrap wrap
    justify-content center

    .remix-tile
      display inline-block
      flex-grow 1
      margin 0.5em
      text-align center

      .remix-img-square
        margin 2% auto 0 auto
        background-color #f9fbf9
        height 6.5em
        width 6.5em

      .title
        font-size 0.7em

      &:hover .title
        font-weight bold

    .remix-tile.playing
      background-color #f9fbf9
      outline 1px solid #e3e1e6
      transition background-color 0.4s ease-in
