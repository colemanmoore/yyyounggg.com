body
  font-family serif
  cursor url(/images/cur1.png), auto

body.loading
  visibility hidden
  content 'loading'

ul
  list-style none

a
  text-decoration none
  &:active, &:visited, &:link
    color black
  &:hover
    color #71103d

#loading-message
  position absolute
  bottom 20px
  width 100%
  text-align center
  font-size 0.9em

#business-card
  position absolute
  opacity 1
  transition opacity 1s ease-in
  top 10px
  left 20px
  z-index 10
  font-size 0.6em
  .card-header
    font-weight bold
    font-family sans-serif
    font-style normal
    margin-bottom 7px

#business-card.hidden, #loading-message.hidden
  opacity 0
  transition opacity 0.3s ease-out

article
  font-style italic
  font-size 2em
  text-align center

  .has-audio
    display none

  h1, h2, h3
    margin 0.1em 0

  .smaller
    font-size 0.7em
